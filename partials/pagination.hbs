<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">Newer Posts</a>
    {{else}}
        <a class="newer-posts" href="#">No More Posts</a>
    {{/if}}
    <a class="page-number">Page {{page}} of {{pages}}</a>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">Older Posts</a>
    {{else}}
        <a class="older-posts" href="#">No More Posts</a>
    {{/if}}
</nav>
